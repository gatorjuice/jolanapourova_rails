<div class="row">
  <div class="col-md-6">
    <%= form_tag "/paintings/#{@painting.id}", method: :post, multipart: true do %>
      <div class="checkbox">
        <label>
          <%= hidden_field_tag :active, value = false %>
          <%= check_box_tag :active, value = true %>Show?
        </label>
      </div>
      <div class="group-form">
        <%= label_tag :name %>
        <%= text_field_tag :name, nil, class: "form-control" %>
      </div>
      <div class="group-form">
        <%= label_tag :medium %>
        <%= text_field_tag :medium, nil, class: "form-control" %>
      </div>
      <div class="group-form">
        <%= label_tag :description %>
        <%= text_field_tag :description, nil, class: "form-control" %>
      </div>
      <div class="group-form">
        <%= label_tag :price %>
        <%= number_field_tag :price, nil, class: "form-control" %>
      </div>
      <div class="group-form">
        <%= label_tag :image %>
        <%= file_field_tag :image, class: "form-control" %>
      </div>
      <div class="group-form control-group">
        <%= submit_tag "Add Painting", class: "btn btn-info" %>
      </div>
    <% end %>
  </div>
</div>