<div class="row">
  <div class="col-md-6">
    <%= form_tag "/paintings/#{@painting.id}", method: :patch, multipart: true do %>
      <div class="checkbox">
        <label>
          <%= hidden_field_tag :active, value = false %>
          <%= check_box_tag :active, value = true, checked = @painting.active %>Show?
        </label>
      </div>
      <div class="group-form">
        <%= label_tag :name %>
        <%= text_field_tag :name, @painting.name, class: "form-control" %>
      </div>
      <div class="group-form">
        <%= label_tag :medium %>
        <%= text_field_tag :medium, @painting.medium, class: "form-control" %>
      </div>
      <div class="group-form">
        <%= label_tag :description %>
        <%= text_field_tag :description, @painting.description, class: "form-control" %>
      </div>
      <div class="group-form">
        <%= label_tag :price %>
        <%= number_field_tag :price, @painting.price, class: "form-control" %>
      </div>
      <div class="group-form">
        <%= label_tag :image %>
        <%= file_field_tag :image, class: "form-control" %>
      </div>
      <div class="group-form control-group">
        <%= submit_tag "Update Painting", class: "btn btn-info" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-6">
    <div class="show-image">
      <%= image_tag @painting.image.url %>
    </div>
  </div>
</div>